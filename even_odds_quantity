<?php
    $pares = 0;
    $impares = 0;
    for($i = 1; $i <= 10; $i++){
        $num = readline("$i - Escreva um número: ");
        if($num % 2 == 0){
            $pares = $pares+1;
        }
        else {
            $impares = $impares+1;
        }
    }
    
    echo "Pares: $pares\nÍmpares: $impares";
